{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@styles": ["src/styles"],
      "@shared/*": ["src/shared/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@domain/*": ["./src/domain/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@context/*": ["./src/context/*"],
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["jest-setup.js"]
}
